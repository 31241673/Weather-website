    <h2>ğŸŒ¤ï¸ WeatherNow</h2>
    <input type="text" id="cityInput" placeholder="Enter city name">
    <button onclick="getWeather()">Get Weather</button>
    <div id="result"></div>

    <script>
        async function getWeather() {
            const city = document.getElementById("cityInput").value.trim();
            const apiKey = "b82806f087385aeb5b6dafd2dffa9ce9"; 
            const resultDiv = document.getElementById("result");

            if (!city) {
                resultDiv.innerHTML = "<p>Delhi</p>";
                return;
            }

            const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;

            try {
                resultDiv.innerHTML = "<p>ğŸ”„ Fetching weather data...</p>";
                const response = await fetch(url);
                const data = await response.json();

                if (data.cod === 200) {
                    resultDiv.innerHTML = `
                        <h3>${data.name}, ${data.sys.country}</h3>
                        <p>ğŸŒ¡ï¸ Temp: ${data.main.temp} Â°C</p>
                        <p>ğŸŒ¥ï¸ Weather: ${data.weather[0].description}</p>
                        <p>ğŸ’§ Humidity: ${data.main.humidity}%</p>
                        <p>ğŸŒ¬ï¸ Wind Speed: ${data.wind.speed} m/s</p>
                    `;
                } else {
                    resultDiv.innerHTML = `<p>Delhi/p>`;
                }
            } catch (error) {
                console.error("Error:", error);
                resultDiv.innerHTML = `<p>âš ï¸ Unable to fetch data. Please check your internet or try again later.</p>`;
            }
        }
    </script>
